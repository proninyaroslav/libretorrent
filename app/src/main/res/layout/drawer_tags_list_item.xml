<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/dialogRectRipple">

        <org.proninyaroslav.libretorrent.ui.customviews.ColorView
            android:id="@+id/color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/color"
            android:layout_toStartOf="@id/menu"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginStart="32dp" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/menu"
            android:background="?attr/transparentRoundRipple"
            app:srcCompat="@drawable/ic_more_vert_grey600_24dp" />
    </RelativeLayout>
</layout>